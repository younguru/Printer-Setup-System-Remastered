         version="3.0">
    <display-name>PrinterSetupSystem</display-name>
    <welcome-file-list>
        <welcome-file>AdminPrinters.jsp</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>21600</session-timeout>
    </session-config>
    <error-page>
