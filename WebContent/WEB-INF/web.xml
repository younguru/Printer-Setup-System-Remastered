    <filter>
        <filter-name>CharacterSetFilter</filter-name>
        <filter-class>org.PrinterSetupSystem.misc.CharacterSetFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterSetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

